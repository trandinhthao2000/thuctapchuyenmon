
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slides = (List<Model.EF.Slide>)ViewBag.Slides;
    var listNewProducts = (List<Model.EF.Product>)ViewBag.NewProducts;
    var ListFeatureProducts = (List<Model.EF.Product>)ViewBag.ListFeatureProducts;
}

@section slide 
{
    <div class="header_slide">
        <div class="header_bottom_left">
            <div class="categories">
                @{Html.RenderAction("ProductCategory", "Product"); }
            </div>
        </div>  
        <div class="header_bottom_right">
            <div class="slider">
                <div id="slider">
                    <div id="mover">
                        @foreach (var item in slides)
                        {
                            <div id="slide-1" class="slide" style="width:50%"; padding="padding:24px 150px;">
                                <div class="slider-img">
                                    <a href="@item.Link"><img src="@item.Image" alt="learn more" /></a>
                                </div>
                                <div class="slider-text" style="padding-left:0%;">
                                    <h1>IPHONE<br /><span>SALE</span></h1>
                                    <div class="features_list">
                                        <h6>Đây là sản phẩm được ưa chuộng nhất của hàng chúng tôi</h6>
                                    </div>
                                    <a href="https://localhost:44349/san-pham/dien-thoai-iphone-13" class="button">ShopNow</a>
                                </div>
                                <div class="clear"></div>
                            </div>
                        }
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
}
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Sản Phẩm Mới</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">Xem tất cả</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in listNewProducts)
        {
            var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4" style="display: block; width: 22.8%;">
                <a href="@url"><img src="@item.Image" alt="@item.Name" /></a>
                <h2 style="font-size:1em;">@item.Name</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(item.Price.HasValue?item.Price.Value.ToString("N0") : "Liên hệ")</span></p>
                        <h4>@(item.Status? "Còn hàng":"Hết hàng")</h4>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/them-gio-hang?productId=@item.ID&quantity=1">Thêm vào giỏ hàng</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>}

    </div>
    <div class="content_bottom">
        <div class="heading">
            <h3>Sản phẩm hot</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">Xem tất cả</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in ListFeatureProducts)
        {
            var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
<div class="grid_1_of_4 images_1_of_4" style="width: 22.8%;">
    <a href="@url"><img src="@item.Image" alt="@item.Name" /></a>
    <h2 style="font-size:1em;">@item.Name</h2>
    <div class="price-details">
        <div class="price-number">
            <p><span class="rupees">@(item.Price.HasValue?item.Price.Value.ToString("N0") : "Liên hệ")</span></p>
            <h4>@(item.Status? "Còn hàng":"Hết hàng")</h4>
        </div>
        <div class="add-cart">
            <h4><a href="/them-gio-hang?productId=@item.ID&quantity=1">Thêm vào giỏ hàng</a></h4>
