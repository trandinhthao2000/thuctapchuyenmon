@model List<Model.EF.Product>
@{
    var category = (Model.EF.ProductCategory)ViewBag.Category;
    ViewBag.Title = category.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section slide {
    <div class="header_slide">
        <div class="header_bottom_left">
            <div class="categories">
                @{Html.RenderAction("ProductCategory", "Product"); }
            </div>
        </div>
        <div class="clear"></div>
    </div>
}
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>@category.Name</h3>
        </div>
        <div class="see">
            <p><a href="#">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in Model)
        {
            var link = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@link"><img src="@item.Image" alt=""></a>
                <h2>@item.Name </h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(item.Price.HasValue?item.Price.Value.ToString("N0") : "Liên Hệ")</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/gio-hang/">Thêm vào giỏ hàng</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
        }
        @if (ViewBag.TotalPage > 1)
        {
            var pageDisplay = (int)ViewBag.MaxPage;
            var totalPage = (int)ViewBag.TotalPage;
            var currentPage = (int)ViewBag.Page;

            var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
            var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

            var link = "/san-pham/" + category.MetaTitle + "-" + category.ID;

    <nav>
        <ul class="pagination">
            @if (currentPage > ViewBag.First)
            {
                <li><a href="@link?pageIndex=@ViewBag.First" title="Trang đầu" class="first"><i class="fa fa-angle-double-left"></i></a></li>
                <li><a href="@link?pageIndex=@ViewBag.First" title="Trang trước" class="prev"><i class="fa fa-angle-left"></i></a></li>
            }
            @for (int i = startPageIndex; i < endPageIndex; i++)
            {
                if (currentPage == i)
                {
                    <li><a href="@link?pageIndex=@i" class="active" title="Trang @i"></a></li>
            }
            else
            {
                    <li><a href="@link?pageIndex=@i" class="pos" title="Trang @i"></a></li>
                }
            }
            @if (currentPage < totalPage)
            {
                <li><a href="@link?pageIndex=@ViewBag.Next" title="Trang sau" class="next"><i class="fa fa-angle-right"></i></a></li>
                <li><a href="@link?pageIndex=@ViewBag.Last" title="Trang cuối" class="last"><i class="fa fa-angle-double-right"></i></a></li>
            }
        </ul>
    </nav>
        }
                else
                {
                <span>Không có bản ghi nào</span>
                }
            </div>

</div>

